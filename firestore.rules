
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read their own profile information
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      // Users can create their own profile and update their username
      allow write: if request.auth.uid == userId;
    }

    // Usernames collection is used for uniqueness checks
    match /usernames/{username} {
      // Anyone can check if a username exists
      allow get: if true;
      // Only authenticated users can create or delete their own username document
      allow create, delete: if request.auth.uid != null;
    }
  }
}
